<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
     >
     
	<ImageButton 
        android:id="@+id/button_char_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="onClick"
        android:background="@drawable/list_button_selector"
        android:contentDescription="@string/access_char_list" 
        />
    
    <ImageButton 
        android:id="@+id/button_char_quiz"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/char_quiz_button_selector"
        android:onClick="onClick"
        android:layout_marginTop="1dp"
        android:contentDescription="@string/access_char_quiz"
        />
    

</LinearLayout>
