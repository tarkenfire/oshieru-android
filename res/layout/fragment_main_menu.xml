<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
     >
    
    <ImageButton 
        android:id="@+id/button_characters"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/placeholder_char"
        android:onClick="onClick"
        />
    
    <ImageButton 
        android:id="@+id/button_grammar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/placeholder_gram"
        android:onClick="onClick"
        />
    
    <ImageButton 
        android:id="@+id/button_vocabulary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/placeholder_vocab"
        android:onClick="onClick"
        />
    

</LinearLayout>
