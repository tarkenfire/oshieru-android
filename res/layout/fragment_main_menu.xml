<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
     >
    
    <ImageButton 
        android:id="@+id/button_characters"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/char_button_selector"
        android:onClick="onClick"
        />
    
    <ImageButton 
        android:id="@+id/button_grammar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
		android:background="@drawable/grammar_button_selector"
		android:layout_marginTop="1dp"
        android:onClick="onClick"
        />
    
    <ImageButton 
        android:id="@+id/button_vocabulary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
		android:background="@drawable/vocab_button_selector"
		android:layout_marginTop="1dp"
        android:onClick="onClick"
        />
    

</LinearLayout>
