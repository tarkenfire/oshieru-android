<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/char_quiz_score" 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/quiz_score_default"
    	android:gravity="center"
        android:background="#ffcfd7"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        />
    
    <TextView
        android:id="@+id/char_quiz_question"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="100sp"
        android:layout_gravity="center_horizontal"
        android:background="#ffcfd7"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"
        />
    
    <Button
        android:id="@+id/char_quiz_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/char_quiz_answer_button_selector"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"
        />

	<Button
        android:id="@+id/char_quiz_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/char_quiz_answer_button_selector"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"
        />
	<Button
        android:id="@+id/char_quiz_button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/char_quiz_answer_button_selector"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"
        />
	
	<Button
        android:id="@+id/char_quiz_button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/char_quiz_answer_button_selector"
        android:textColor="#FFFFFF"
        />
</LinearLayout>

